@model MicroAssignment.Models.Course

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.CourseID)
    <fieldset>
        <legend>Course</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control",@style="width:300px",@placeholder="CourseName" })
            @Html.ValidationMessageFor(model => model.CourseName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentID, "Department")
        </div>
        <div class="editor-field">
            
            @Html.DropDownList("DepartmentID", ViewBag.DepartmentID as SelectList, "Select Department", new { id="", @required=true, @class = "form-control",@style="width:auto"}) 
            <span style="color:#808080;font-size:smaller">[ @Html.DisplayFor(x=>x.Department.DepartmentInfo) ]</span>
            @Html.ValidationMessageFor(model => model.DepartmentID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreditUnit)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CreditUnit, new { @class = "form-control",@style="width:300px",@placeholder="CreditUnit" })
            @Html.ValidationMessageFor(model => model.CreditUnit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseCode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.CourseCode, new { @class = "form-control",@style="width:300px",@placeholder="CourseCode" })
            @Html.ValidationMessageFor(model => model.CourseCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SessionId, "Session")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SessionId", ViewBag.SessionId as SelectList, "Select Session", new { id="", @required=true, @class = "form-control",@style="width:auto"}) 
             <span style="color:#808080;font-size:smaller">[ @Html.DisplayFor(x=>x.Session.FullSession) ]</span>
            @Html.ValidationMessageFor(model => model.SessionId)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-primary" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
