@model MicroAssignment.Models.ResetPasswordConfirmModel

@{
    ViewBag.Title = "ResetPasswordConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h4 class="page-header">ResetPassword Confirmation
                    <small></small>
                </h4>
                <ol class="breadcrumb">
                    <li>@Html.ActionLink("Home","Register","Account")</li>
                    <li class="active">Password Reset</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->


@using (Html.BeginForm("ResetPasswordConfirmation", "Account"))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ResetPassword ConfirmModel</legend>

        
            @Html.Hidden("Token", Model.Token)

        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.NewPassword , new { @class = "form-control", @style = "width:180px",@type="password" })
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @style = "width:180px",@type="password"  })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <p style="margin-top:10px">
            <input type="submit" value="Reset Password" class="btn btn-primary" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
