@model IEnumerable<MicroAssignment.Models.ReplyAssignment>

@{
    ViewBag.Title = "ControlLevel";
    int sn = 1;
}

<!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h4 class="page-header">The Department of
                    <small>@ViewBag.Deparment</small>
                </h4>
                <ol class="breadcrumb">
                    <li>@Html.ActionLink("<< Bact to control panel", "ControlMenu", new { id=ViewBag.Id })
                    </li>
                    <li>Level: @ViewBag.Level</li>
                    <li class="active">Student List</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            S/N
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.RegistrationNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.ImageUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(sn++)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserProfile.RegistrationNumber)
        </td>
       <td>
            @Html.DisplayFor(modelItem => item.UserProfile.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            <img src="/Uploads/Items/@System.IO.Path.GetFileName(item.UserProfile.ImageUrl)" style="height:30px" />
        </td>
        <td>
            @Html.ActionLink("Add Score", "EditScore", new { id = item.ReplyAssignmentId }, new { @class = "btn btn-primary" }) 
            
        </td>
    </tr>
}

</table>
