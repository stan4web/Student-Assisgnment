<div>
    @{
        int sn = 1;
    }
    <table class="table table-hover table-bordered table-striped">
        <tr>
            <th>S/N</th>
            <th>Lecturer Name</th>
            <th>CourseCode</th>
            <th>Topic</th>
            <th>Date</th>
        </tr>
   @foreach (var item in ViewBag.Reply)
    {
       <tr>
           <td>
               @(sn++)
           </td>
           <td>@item.Assignment.CourseCode</td>
            <td>@item.UserProfile.FullName</td>
           <td><a title="View Assignment Details" href="@Url.Content("../Reply/Details/")@item.ReplyAssignmentId">@item.Assignment.Topic</a></td>
           <td>@item.Date.ToString().Substring(0,10)</td>
       </tr> 
    }
    </table>
</div>